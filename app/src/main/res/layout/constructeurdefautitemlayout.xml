<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#F57C00"
            android:textAllCaps="true"
            android:layout_marginTop="25sp"
            android:layout_marginBottom="15sp"
            android:textSize="25sp"
            android:textAlignment="center"
            android:gravity="center"
            android:id="@+id/nomrecette"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />




    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <ImageView


            android:textAlignment="center"
            android:gravity="center"
            android:id="@+id/image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
             />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:textAlignment="center"
            android:layout_weight="25"
            android:textColor="#000000"
            android:id="@+id/typeplat"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:gravity="center"
            android:textAlignment="center"
            android:id="@+id/niveaudifficulte"
            android:layout_weight="25"
            android:textColor="#000000"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:gravity="center"
            android:textAlignment="center"
            android:layout_weight="25"
            android:textColor="#000000"
            android:id="@+id/tpscuisson"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:gravity="center"
            android:textAlignment="center"
            android:layout_weight="25"
            android:textColor="#000000"
            android:id="@+id/tempspreparation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Les ingrÃ©dients:"
            android:textSize="15sp"
            android:textColor="#F57C00"
            android:layout_marginBottom="10sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView

            android:textColor="#000000"
            android:id="@+id/ingredient"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="La recette:"
            android:textSize="15sp"
            android:textColor="#F57C00"
            android:layout_marginBottom="10sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <TextView

            android:textColor="#000000"
            android:id="@+id/preparation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="L'auteur:"
            android:textSize="15sp"
            android:textColor="#F57C00"
            android:layout_marginBottom="10sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <TextView

            android:textColor="#000000"
            android:id="@+id/donneessupplementaire"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>