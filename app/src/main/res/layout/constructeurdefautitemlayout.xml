<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#F57C00"
            android:textAllCaps="true"
            android:layout_marginTop="25sp"
            android:layout_marginBottom="20sp"
            android:textSize="25sp"
            android:textAlignment="center"
            android:gravity="center"
            android:id="@+id/nomrecette"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />




    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:textAlignment="center"
            android:gravity="center"
            android:id="@+id/image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="20sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15sp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_weight="25"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView

                android:gravity="center"
                android:id="@+id/imagetyperepas"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                 />

            <TextView
                style="@style/Text"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="#000000"
                android:id="@+id/typeplat"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_weight="25"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView

                android:gravity="center"
                android:id="@+id/imagedifficultee"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                 />

            <TextView
                style="@style/Text"
                android:gravity="center"
                android:textAlignment="center"
                android:id="@+id/niveaudifficulte"
                android:layout_weight="25"
                android:textColor="#000000"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />



        </LinearLayout>

            <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_weight="25"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                style="@style/Text"
                android:gravity="center"
                android:id="@+id/imagechronomètre"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="15sp" />

            <TextView
                style="@style/Text"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_weight="25"
                android:textColor="#000000"
                android:id="@+id/tempspreparation"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@android:color/darker_gray"/>




        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_weight="25"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:gravity="center"
                android:id="@+id/imagefour"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="15sp" />

            <TextView
                style="@style/Text"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_weight="25"
                android:textColor="#000000"
                android:id="@+id/tpscuisson"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@android:color/darker_gray"/>


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp">

        <TextView
            style="@style/Text"
            android:text="Les ingrédients:"
            android:textColor="#F57C00"
            android:layout_marginBottom="10sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/Text"
            android:id="@+id/ingredient"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <TextView

            style="@style/Text"
            android:textColor="#F57C00"
            android:text="La recette:"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <TextView
            style="@style/Text"
            android:textColor="#000000"
            android:id="@+id/preparation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <TextView
            style="@style/Text"
            android:text="L'auteur:"
            android:textColor="#F57C00"

            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <TextView
            style="@style/Text"
            android:textColor="#000000"
            android:id="@+id/donneessupplementaire"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>



        <TextView
            style="@style/Text"
            android:textColor="#FFC400"
            android:id="@+id/envoyermail"
            android:text="Envoyer la liste des ingrédients manquants par mail!"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rentreradressemail"
            android:hint="Email:"
            android:inputType="textEmailAddress"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="15sp"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/round_button"
            android:layout_gravity="center"
            android:gravity="center_horizontal|center_vertical"
            android:text="Go !"
            android:textColor="#ffff9835"
            android:id="@+id/buttonmaillistealimentsmanquants"
            android:layout_marginBottom="10sp"/>




</LinearLayout>