<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:textColor">@color/brown_text</item>
        <item name="android:background"></item>
    </style>

    <style name="Titles" parent="android:Theme.Holo.Light">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/brown_title</item>
    </style>
    <style name="SubTitles" parent="android:Theme.Holo.Light">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/brown_subtitles</item>
    </style>

    <style name="ImageBorder">
        <!-- 3dp so the background border to be visible -->
        <item name="android:padding">3dp</item>
        <item name="android:background">@drawable/image_border</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

</resources>
