<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:textColor">@color/brown_text</item>
    </style>

    <style name="Titles" parent="android:Theme.Holo.Light">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">10sp</item>
        <item name="android:layout_marginTop">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/brown_title</item>
    </style>


    <style name="SubTitles" parent="android:Theme.Holo.Light">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/brown_subtitles</item>
    </style>

    <style name="Text" parent="android:Theme.Holo.Light">
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginLeft">19dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginBottom">10sp</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="button" parent="android:Theme.Holo.Light">

        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">#FFE57F</item>

    </style>



    <style name="ImageBorder">
        <!-- 3dp so the background border to be visible -->
        <item name="android:padding">3dp</item>
        <item name="android:background">@drawable/image_border</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

</resources>
